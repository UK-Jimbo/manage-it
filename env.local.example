# App
NEXT_PUBLIC_APP_DOMAIN=http://localhost:3000
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000

# Postgres
POSTGRES_USER=pm_user
POSTGRES_PASSWORD=change_me
POSTGRES_DB=project_manager
POSTGRES_PORT=5432
POSTGRES_HOST=localhost

# SuperTokens core
SUPERTOKENS_CONNECTION_URI=http://localhost:3567
# Note: This URI is for the SuperTokens Core service to connect to the DB (inside Docker network)
# But here in .env.local (for the Next.js app), we don't strictly need the Core's DB URI, 
# but we do need the App's DB connection string.
# The Core's DB connection is set in docker-compose.yml via POSTGRESQL_CONNECTION_URI.

SUPERTOKENS_APP_NAME=ProjectManager
SUPERTOKENS_API_DOMAIN=http://localhost:3000
SUPERTOKENS_WEBSITE_DOMAIN=http://localhost:3000
