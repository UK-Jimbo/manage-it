# Shared environment variables for both Next.js app and SuperTokens service

# Token validity settings (shared)
# ACCESS_TOKEN_VALIDITY (seconds)
# REFRESH_TOKEN_VALIDITY (minutes)
ACCESS_TOKEN_VALIDITY=900        # 15 minutes
REFRESH_TOKEN_VALIDITY=20160     # 14 days

# PostgreSQL connection URI for SuperTokens (uses Docker network host 'db')
POSTGRESQL_CONNECTION_URI=postgresql://your_username:your_password@db:5432/your_database

# PostgreSQL connection details (shared base config)
POSTGRES_USER=your_username
POSTGRES_PASSWORD=your_password
POSTGRES_DB=your_database
POSTGRES_PORT=5432